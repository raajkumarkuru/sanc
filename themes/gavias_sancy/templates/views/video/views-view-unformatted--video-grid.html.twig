{% if attributes -%}
   <div{{ attributes }}>
{% endif %}
   <div class="video-grid-2-3">
      {% for row in rows|batch(5) %}
         {% set k = 0 %}
         {% for column in row %} 
            {% set k = k + 1 %}

            {% if k <= 2 %}
               {% if k == 1 %}<div class="clearfix row-1">{% endif %}
                  <div class="item item-{{k}} no-padding">{{ column.content }}</div>
               {% if k == 2 or k == row|length %}</div>{% endif %}
            {% else %}
               {% if k == 3 %} <div class="clearfix row-2"> {% endif %}
                  <div class="item item-{{k}} no-padding">{{ column.content }}</div>
               {% if k == 5 or k == row|length %}</div>{% endif %}  
            {% endif %}      
         {% endfor %}
      {% endfor %}   
   </div>   
{% if attributes -%}
    </div>
{% endif %}
