{% if attributes -%}
  <div{{ attributes }}>
{% endif %}
   
   {% if title %}
      <h3>{{ title }}</h3>
   {% endif %}
   
   

   {% if 'masonry' in attributes.class %}
      <div class="gva-view-grid-inner isotope-items view-portfolio lg-block-grid-{{ class_grid.items_lg }} md-block-grid-{{class_grid.items_md}} sm-block-grid-{{class_grid.items_sm}} xs-block-grid-{{class_grid.items_xs}}" data-drupal-views-infinite-scroll-content-wrapper-gvaloadmore>
   {% else %}   
      <div class="lg-block-grid-{{ class_grid.items_lg }} md-block-grid-{{class_grid.items_md}} sm-block-grid-{{class_grid.items_sm}} xs-block-grid-{{class_grid.items_xs}}">
   {% endif %}   
      {% for row in rows %}
         <div class="item-columns">
            <div{{ row.attributes }}>{{ row.content|raw }}</div>
         </div>
      {% endfor %}
   </div>

{% if attributes -%}
   </div>
{% endif %}
